<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".movieHome.MovieHomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/movieHomeFragmentCardViewDailyTrendingMovies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/movieHomeFragmentCardViewDailyTrendingTvShows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/movieHomeFragmentAnimationDailyTrendingMovies"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#000"
                    android:padding="1dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="ripple.json"
                    app:lottie_loop="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:background="#000"
                    android:includeFontPadding="false"
                    android:padding="5dp"
                    android:text="Daily Trending Movies.."
                    android:textColor="#FF9800"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:clipToPadding="false"
                android:padding="5dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/movieHomeFragmentCardViewDailyTrendingTvShows"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/movieHomeFragmentCardViewDailyTrendingPeople"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieHomeFragmentCardViewDailyTrendingMovies">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/movieHomeFragmentAnimationDailyTrendingTvShows"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#000"
                    android:padding="1dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="ripple.json"
                    app:lottie_loop="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:background="#000"
                    android:includeFontPadding="false"
                    android:padding="5dp"
                    android:text="Daily Trending TV Shows.."
                    android:textColor="#FF9800"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:clipToPadding="false"
                android:padding="5dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/movieHomeFragmentCardViewDailyTrendingPeople"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieHomeFragmentCardViewDailyTrendingTvShows">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/movieHomeFragmentAnimationDailyTrendingPeople"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#000"
                    android:padding="1dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="ripple.json"
                    app:lottie_loop="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:background="#000"
                    android:includeFontPadding="false"
                    android:padding="5dp"
                    android:text="Weekly Trending Movies.."
                    android:textColor="#FF9800"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:clipToPadding="false"
                android:padding="5dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>